@model CreateEditSchoolProgramViewModel

@{
    ViewBag.Title = "Create";
}

<div class="col-xl-9 col-lg-12 center">
    <div class="card card-stats mb-4 mb-xl-0 shadow--hover">
        <div class="card-header">
            <h2>Create School Program</h2>
        </div>
        <div class="card-body">

            @Html.ValidationSummary(false, "", new { @class = "text-danger small" })

            @using (Html.BeginForm(
                nameof(SchoolProgramController.Create),
                MiscExt.GetName<SchoolProgramController>(),
                FormMethod.Post,
                new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Name, "School Program Name", new { @class = "form-control-label" })
                    <div class="input-group input-group-alternative">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="ni ni-caps-small"></i></span>
                        </div>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = nameof(Model.Name), style = "padding-left:5px;" })
                    </div>
                </div>

                <div class="form-inline row">
                    <div class="text-center col">
                        <button type="submit" class="btn btn-primary my-4">Create School Program</button>
                    </div>
                    <div class="text-center col">
                        <a href="@Url.Action(nameof(CourseController.Index), MiscExt.GetName<CourseController>())" class="btn btn-danger my-4">Discard Draft</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@Html.Partial("_Footer")