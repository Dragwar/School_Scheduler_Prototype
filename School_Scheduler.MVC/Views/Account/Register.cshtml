            </div>

            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
        <!-- Page content -->
        <div class="container mt--8 pb-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <!-- Table -->
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8" style="margin-top: -120px;">
                        <div class="card bg-secondary shadow border-0">
                            <div class="text-muted text-center mt-2 mb-4"><small>Sign Up As</small></div>
                            <div class="card-header bg-transparent pb-5">


                                <div style="display: flex; flex-flow: row wrap; justify-content: space-around;">
                                    <div class="custom-control custom-control-alternative custom-radio">
                                        <input class="custom-control-input" name="@nameof(Model.Discriminator)" id="customRadioInstructor" type="radio" value="@Discriminator.Instructor">
                                        <label class="custom-control-label" for="customRadioInstructor">
                                            <span class="text-muted">@nameof(Discriminator.Instructor)</span>
                                        </label>
                                    </div>

                                    <div class="custom-control custom-control-alternative custom-radio">
                                        <input class="custom-control-input" name="@nameof(Model.Discriminator)" id="customRadioStudent" type="radio" value="@Discriminator.Student">
                                        <label class="custom-control-label" for="customRadioStudent">
                                            <span class="text-muted">@nameof(Discriminator.Student)</span>
                                        </label>
                                    </div>

                                    <div class="custom-control custom-control-alternative custom-radio">
                                        <input class="custom-control-input" name="@nameof(Model.Discriminator)" id="customRadioApplicationUser" type="radio" value="@Discriminator.ApplicationUser" checked>
                                        <label class="custom-control-label" for="customRadioApplicationUser">
                                            <span class="text-muted">Basic User</span>
                                        </label>
                                    </div>
                                </div>


                                @{
                                    #region Buttons
                                    @*
                                        <div class="text-center">
                                            <a href="#" class="btn btn-neutral btn-icon mr-4">
                                                <span class="btn-inner--icon"><img src="~/Template/assets/img/icons/common/github.svg"></span>
                                                <span class="btn-inner--text">Student</span>
                                            </a>
                                            <a href="#" class="btn btn-neutral btn-icon">
                                                <span class="btn-inner--icon"><img src="~/Template/assets/img/icons/common/google.svg"></span>
                                                <span class="btn-inner--text">Instructor</span>
                                            </a>
                                        </div>
                                    *@
                                    #endregion
                                }
                            </div>

                            <div class="card-body px-lg-5 py-lg-5">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger small" })
                                <div class="form-group">
                                    <div class="input-group input-group-alternative mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-circle-08"></i></span>
                                        </div>
                                        <input class="form-control" name="Name" placeholder="@nameof(Model.Name)" type="text" style="padding-left: 5px;" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-alternative mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                        </div>
                                        <input class="form-control" name="@nameof(Model.Email)" placeholder="Email" type="email" style="padding-left: 5px;" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                        </div>
                                        <input class="form-control" name="@nameof(Model.Password)" placeholder="Password" type="password" style="padding-left: 5px;" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                        </div>
                                        <input class="form-control" name="@nameof(Model.ConfirmPassword)" placeholder="Confirm Password" type="password" style="padding-left: 5px;" required>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-4">Register</button>
                                </div>
                                @{
                                    #region MyRegion
                                    @*
                                        <div class="text-muted font-italic"><small>password strength: <span class="text-success font-weight-700">strong</span></small></div>
                                        <div class="row my-4">
                                          <div class="col-12">
                                            <div class="custom-control custom-control-alternative custom-checkbox">
                                              <input class="custom-control-input" id="customCheckRegister" type="checkbox">
                                              <label class="custom-control-label" for="customCheckRegister">
                                                <span class="text-muted">I agree with the <a href="#!">Privacy Policy</a></span>
                                              </label>
                                            </div>
                                          </div>
                                        </div>
                                    *@
                                    #endregion
                                }



                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6">
                                <a href="@Url.Action(nameof(AccountController.ForgotPassword), MiscExt.GetName<AccountController>())" class="text-light">
                                    <small>Forgot password?</small>
                                </a>
                            </div>
                            <div class="col-6 text-right">
                                <a href="@Url.Action(nameof(AccountController.Login), MiscExt.GetName<AccountController>())" class="text-light">
                                    <small>Already have an account?</small>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
